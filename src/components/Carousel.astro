<style>
  img {
    width: 30rem;
    height: 30rem;
    object-fit: cover;
  }

  .swiper-btn {
    color: white;
  }

  .swiper::before {
    content: "";
    right: -10px;
    left: -10px;
    top: -5.5rem;
    height: 10rem;
    background: #fff;
    position: absolute;
    z-index: 999;
    border-radius: 51% 49% 48% 52% / 49% 50% 50% 51%;
  }

  .swiper::after {
    content: "";
    right: -20px;
    left: -20px;
    bottom: -6rem;
    height: 10rem;
    background: #fff;
    position: absolute;
    z-index: 999;
    border-radius: 51% 49% 48% 52% / 49% 50% 50% 51%;
  }
</style>

<script accesskey="">
  // import Swiper styles
  import Swiper, { Autoplay, Navigation, Pagination } from "swiper";
  import "swiper/css";
  const swiper = new Swiper(".swiper", {
    // Optional parameters

    direction: "horizontal",
    breakpoints: {
      320: {
        slidesPerView: 1,
      },
      520: {
        slidesPerView: 2,
      },
      1024: {
        slidesPerView: 3,
      },
      1600: {
        slidesPerView: 4,
      },
    },
    loop: true,
    spaceBetween: 50,
    // Navigation arrows
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },

    // And if we need scrollbar
    scrollbar: {
      el: ".swiper-scrollbar",
    },
    // autoplay
    autoplay: {
      delay: 500,
      disableOnInteraction: true,
    },
    modules: [Navigation, Pagination, Autoplay],
  });
</script>
